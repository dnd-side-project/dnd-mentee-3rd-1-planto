<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.planto">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".main.MainActivity"></activity>
        <activity android:name=".user.EditProfileActivity" />
        <activity android:name=".user.LeaveServiceActivity" />
        <activity android:name=".user.UserDetailActivity" />
        <activity android:name=".myplant.ConfirmPlantVarietyActivity" />
        <activity android:name=".myplant.SetPlantNameActivity" />
        <activity android:name=".myplant.SearchPlantVarietyActivity" />
        <activity android:name=".myplant.ConfirmMyPlantActivity" />
        <activity android:name=".myplant.GetPlantPictureActivity" />
        <activity
            android:name=".SplashScreenActivity"
            android:noHistory="true"
            android:theme="@style/Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FirstIntroActivity" />
        <activity android:name=".SecondIntroActivity" />
        <activity android:name=".ThirdIntroActivity" />
        <activity android:name=".user.LogInActivity" />
        <activity android:name=".user.JoinActivity" />
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
</manifest>